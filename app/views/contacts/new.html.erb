<div class="col-md-4 col-md-offset-4">
  <h2 class="edit-contact-title">Add Contact</h2>
  <%= form_for @contact do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control form-group", placeholder: "Name" %>

    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control form-group", placeholder: "Phone" %>

    <%= f.hidden_field :user_id, value: @user.id %>

    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>