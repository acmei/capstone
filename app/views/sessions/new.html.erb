<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h1>Sign In</h1>
      <% if flash.now[:error] %>
        <div class="alert alert-danger">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <%= flash.now[:error] %>
        </div>
      <% end %>

      <%= form_for :session, url: login_path do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control form-group' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control form-group' %>

        <%= f.submit "Sign In", class: "btn btn-primary form-control form-group" %>
      <% end %>
    </div>
  </div>
</div>
