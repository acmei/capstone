<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <h3>Sign In</h3>

      <%= form_for :session, url: login_path do |f| %>

        <div class="form-group has-feedback has-feedback-left">
          <%= f.label :username, class: 'required sr-only' %>
          <%= f.text_field :username, class: 'form-control', placeholder: "Email or Username" %>
          <i class="form-control-feedback text-muted fa fa-user"></i>
        </div>

        <div class="form-group has-feedback has-feedback-left">
          <%= f.label :password, class: 'required sr-only' %>
          <%= f.password_field :password, class: 'form-control form-group', placeholder: "Password (min 6 characters)" %>
          <i class="form-control-feedback text-muted fa fa-lock"></i>
        </div>

        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me â€¢ </span><%= link_to("Forgot username/password?", new_password_reset_path, class: "forgot") %>
        <% end %>

        <%= f.submit "Login", class: "btn btn-primary form-control" %>
        <%= link_to google_path(:google_oauth2), class: 'form-control btn btn-danger google' do %>
          <i class="fa fa-google-plus"></i> Login with Google
        <% end %>
        <%= link_to("Register for an Account", new_user_path, class: "form-control btn btn-info register") %>
      <% end %>
    </div>
  </div>
</div>
