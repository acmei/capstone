<% questions.each do |question| %>  
  <% if question.answer_type == "bool" %>
    <div class="col-md-6">
      <%= label_tag :bool, question.text.titlecase, class: "required" %>
    </div>
    <div class="col-md-6">
      <%= select_tag "answers[][bool]", ['No', 'Yes'].map{ |n| [n, n] }, {}, { class: 'form-control form-group' } %>
    </div>
  <% elsif question.answer_type == "num" && question.category == "urge" %>
    <div class="col-md-5">
      <%= label_tag :num, asker + question.text.titlecase, class: "required" %>
    </div>
    <div class="col-md-7">
    <%= select_tag "answers[][num]", options_for_select(select(number)), 
      { include_blank: "Select a Rating", class: 'form-control form-group' } %>
    </div>
  <% elsif question.answer_type == "num" && question.category == "rating" %>
    <div class="col-md-5">
      <%= label_tag :num, asker + question.text.titlecase, class: "required" %>
    </div>
    <div class="col-md-7">
    <%= select_tag "answers[][num]", options_for_select(select(number)), 
      { include_blank: "Select a Rating", class: 'form-control form-group' } %>
    </div>
  <% elsif question.answer_type == "num/text" %>
    <div class="col-md-4">
      <%= label_tag :num, question.text.titlecase, class: "required" %>
    </div>
    <div class="col-md-2">
      <%= select_tag "answers[][num]", options_for_select(select(number)), { include_blank: "#" }, { class: 'form-control form-group' } %>
    </div>
    <div class="col-md-6">
      <%= label_tag :text, class: "sr-only" %>
      <%= text_field_tag "answers[][text]", placeholder: 'What?', class: 'form-control form-group' %>
    </div>
  <% elsif x.answer_type == "text" %>
    <div class="col-md-6">
      <%= label_tag :text, question.text.titlecase %>
    </div>
    <div class="col-md-6">
      <%= text_field_tag "answers[][text]", placeholder: 'What?', class: 'form-control form-group' %>
    </div>
  <% end %>
  <%= hidden_field_tag "answers[][user_id]", @user.id %>
  <%= hidden_field_tag "answers[][question_id]", question.id %>
<% end %>
